<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       android:orientation="vertical" android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       >
       
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="10dip" >
    
   
       <LinearLayout android:id="@+id/top_container" 
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
               
           
        <Button
        android:id="@+id/btnConnect"
        android:layout_weight="2" 
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:drawableLeft="@drawable/connect"
        android:text="Kết nối máy in"
        android:textSize="16sp" />
               
        <Button
        android:id="@+id/btnPrint"
        android:layout_weight="2" 
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:drawableLeft="@drawable/print"
        android:text="In hóa đơn TN"
        android:textSize="16sp" />
                   
        <Button
        android:id="@+id/etSide"
        android:layout_weight="2" 
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:drawableLeft="@drawable/print"
        android:text="In hóa đơn KH"
        android:textSize="16sp" />
                  
       </LinearLayout>
       
       <!-- Row 1 Above -->
      
       <LinearLayout android:id="@+id/top_container2" 
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
               
        <TextView
        android:id="@+id/txtRTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="right"
        android:text="Giờ trả kết quả:" />
           
        <EditText
        android:id="@+id/spDate"
        android:layout_width="200dp"
        android:textSize="16sp"
        android:layout_height="wrap_content"/>
        
        <EditText
        android:id="@+id/spTime"
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:layout_height="wrap_content"/>
                  
       </LinearLayout>
       
       <!-- Row 2 Above -->
       
 
 		<LinearLayout android:id="@+id/top_container3" 
        android:orientation="horizontal"
        android:layout_marginTop="26dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
               
        <TextView
        android:id="@+id/txtRTime2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="right"
        android:text="Mã thẻ: " />
           
        <EditText
        android:id="@+id/etMaThe"
        android:layout_width="80dp"
        android:textSize="16sp"
        android:text=""
        android:layout_height="wrap_content"/>
        
        <Button
        android:id="@+id/btnLayThongTin"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:text="Lấy thông tin"
        android:layout_height="wrap_content"/>
        
        <TextView
        android:id="@+id/txtRTime3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="right"
        android:text="Số tiền còn lại:" />
        
        <EditText
        android:id="@+id/etSoTienConLai"
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:text=""
        android:layout_height="wrap_content"/>
                  
       </LinearLayout>
 		
       
       <!-- Row 3 Above -->
       
       <LinearLayout android:id="@+id/top_container4" 
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
               
        <TextView
        android:id="@+id/txtRTime4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="right"
        android:text="SATN:" />
           
        <EditText
        android:id="@+id/etSATN"
        android:layout_width="80dp"
        android:textSize="16sp"
        android:text=""
        android:layout_height="wrap_content"/>
        
        
        <TextView
        android:id="@+id/txtRTime5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="right"
        android:text="KNTN:" />
        
        <EditText
        android:id="@+id/etKNTN"
        android:layout_width="80dp"
        android:textSize="16sp"
        android:text=""
        android:layout_height="wrap_content"/>
        
        <TextView
        android:id="@+id/txtRTime6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="right"
        android:text="Đưa đón:" />
        
        <EditText
        android:id="@+id/etDuaDon"
        android:layout_width="80dp"
        android:textSize="16sp"
        android:text=""
        android:layout_height="wrap_content"/>
        
        <Button
        android:id="@+id/btnThanhToan"
        android:layout_width="fill_parent"
        android:textSize="16sp"
        android:text="Thanh toán"
        android:layout_height="wrap_content"/>
                  
       </LinearLayout>
       
       <!-- Row 4 Above -->
       
       <LinearLayout android:orientation="horizontal"
			   android:layout_marginTop="26dp"
               android:layout_width="fill_parent"
               android:layout_height="fill_parent">
              
               <EditText
        android:id="@+id/txtMain"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:focusable="false"
        android:cursorVisible="true"
        android:inputType="textMultiLine"
        android:singleLine="false" />
             
       </LinearLayout>
       
       
       
       
       
       </LinearLayout>

</LinearLayout>